<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.pastebin.jo.Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llclear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_ll"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear all application data"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Clear data"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llstar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_ll"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If this helped you"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Give a star"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llaboutpbin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_ll"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Know about Pastebin"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="About Pastebin"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llpolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_ll"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We respect your privacy"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Privacy Policy"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llaboutpdev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_ll"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Application by"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="jobinrjohnson"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
